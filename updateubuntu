#!/bin/bash
echo "#####################################"
echo "## Press enter to update ubuntu... ##"
echo "#####################################"
read dummy
echo -e "####################"
echo -e "## Updating lists ##"
echo -e "####################"
sudo apt update
echo -e "######################"
echo -e "## Upgrading system ##"
echo -e "######################"
sudo apt full-upgrade -y
echo -e "############################"
echo -e "## Removing unnecessaries ##"
echo -e "############################"
sudo apt autoremove -y
echo "################################################"
echo "## Update completed, press enter to reboot... ##"
echo "################################################"
read dummy
sudo reboot
